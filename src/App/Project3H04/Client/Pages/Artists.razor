@page "/artists"
@inject IKunstenaarService KunstenaarService
<body>


    <p class="black-style" style=" justify-content:left;padding-left:10px">Artworks</p>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 mb-4">
                <input type="search" placeholder="search artist..." value="@artistSearch" @oninput="SearchArtist" />
            </div>
        </div>
        <div class="row">
            @if (kunstenaars != null)
            {
                @foreach (var kunst in kunstenaars)
                {

                    <div class="col-lg-4 col-md-6">
                        <div>
                            <img src="/images/artist2.PNG" alt="" style="width:300px; height:auto " />
                            <div class="artwork-text">
                                <p>@kunst.Gebruikersnaam</p>
                                <p>@kunst.Email</p>
                            </div>
                        </div>
                    </div>



                }

            }
            else
            {
                <p>Loading ...</p>
            }

        </div>
    </div>

</body>

@code {  

    private List<Kunstenaar_DTO> kunstenaars;
    private List<Kunstenaar_DTO> kunstenaarsCopy;
    private string artistSearch;
    protected override async Task OnInitializedAsync()
    {
        kunstenaars = await KunstenaarService.GetKunstenaars();
        kunstenaarsCopy = kunstenaars;
    }

    private void SearchArtist(ChangeEventArgs args)
    {
        artistSearch = args.Value.ToString();
        kunstenaars = kunstenaarsCopy.Where(x => x.Gebruikersnaam.Contains(artistSearch)).ToList();
    }

}

