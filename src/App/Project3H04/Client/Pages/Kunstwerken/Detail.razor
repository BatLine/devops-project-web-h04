@page "/artworks/{id:int}"
<!--AUTH-->
@attribute [AllowAnonymous]
@inject PublicClient httpClient

@if (_kunstwerk == null)
{
    <!--<LoadingSpinner />-->
}
else
{
<DetailArtwork Kunstwerk="@_kunstwerk" />
}


@code {
    [Parameter] public int Id { get; set; }
    private Kunstwerk_DTO.Detail _kunstwerk;

    protected override async Task OnParametersSetAsync()
    {
        var response = await httpClient.Client.GetFromJsonAsync<KunstwerkResponse.Detail>($"api/Kunstwerk/{Id}");
        _kunstwerk = response.Kunstwerk;
    }
}
