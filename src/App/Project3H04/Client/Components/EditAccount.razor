
<EditForm Model="@Model" OnValidSubmit="@EditGebruikerAsync">
    <FluentValidationValidator />
    <ValidationSummary />

    <div class="field">
        <label class="label">Gebruikersnaam</label>
        <div class="control">
            <InputText class="input" @bind-Value="Model.Gebruikersnaam" />
        </div>
    </div>

    @*<div class="field">
        <label class="label">Email</label>
        <div class="control">
            <InputText class="input" @bind-Value="Model.Email" />
        </div>
    </div>*@

    <div class="field">
        <label class="label">GeboorteDatum</label>
        <div class="control">
            <InputDate class="input"  @bind-Value="Model.GeboorteDatum" />
        </div>
    </div>

    <div class="field">
        <label class="label">Details</label>
        <div class="control">
            <InputTextArea class="textarea" @bind-Value="Model.Details" />
        </div>
    </div>

    <div class="field">
        <label class="label">Profiel foto</label>
        <div class="control">
            <InputFile OnChange="@OnInputFileChange" accept="image/*" />
            <img src="@Model.Fotopad" alt="@Model.Fotopad" width="250" height="250" style="padding-right:20px;" />

        </div>
    </div>


    <div class="buttons">
        <button class="button is-link is-fullwidth" type="submit">Submit</button>
    </div>

</EditForm>